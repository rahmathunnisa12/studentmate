<!-- views/notes.ejs -->
 
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Study Notes</title>
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg: #f8f2ff; 
      --card-bg: #fff;
      --primary: #7c5ef7;
      --text: #333;
      --border-radius: 10px;
      --shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--bg);
      padding: 20px;
      margin: 0;
    }

    .container {
      max-width: 800px;
      margin: auto;
      text-align: center;
    }

    h1 {
      color: var(--primary);
      margin-bottom: 20px;
    }

    .note-card {
      background: white;
      padding: 20px;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow);
      margin-bottom: 15px;
    }

    .note-title {
      font-size: 18px;
      font-weight: bold;
      color: var(--primary);
    }

    .note-subject {
      font-size: 14px;
      color: #666;
    }

    .note-content {
      margin-top: 10px;
      font-size: 15px;
      color: var(--text);
    }

    .note-actions {
      margin-top: 10px;
    }

    .note-actions a {
      color: var(--primary);
      text-decoration: none;
      margin-right: 10px;
      font-size: 13px;
    }

    .logout-btn {
      display: block;
      text-align: center;
      margin-top: 30px;
      color: var(--primary);
      font-weight: bold;
      text-decoration: none;
    }

    .add-note-btn {
      display: inline-block;
      margin: 20px auto;
      padding: 10px 20px;
      background-color: var(--primary);
      color: white;
      border-radius: var(--border-radius);
      text-decoration: none;
    }

    .add-note-btn:hover {
      background-color: #6a4de6;
    }
    .alert {
  padding: 10px 15px;
  margin-bottom: 20px;
  border-radius: var(--border-radius);
  font-weight: 500;
  text-align: left;
}

.alert-success {
  background-color: #e6f4ea;
  color: #2e7d32;
  border: 1px solid #c8e6c9;
}

.alert-danger {
  background-color: #fdecea;
  color: #c62828;
  border: 1px solid #f5c6cb;
}

  </style>
</head>
<body>
  <div class="container">
    <% if (success_msg) { %>
  <div class="alert alert-success"><%= success_msg %></div>
<% } %>

<% if (error_msg) { %>
  <div class="alert alert-danger"><%= error_msg %></div>
<% } %>

    <h1>üìö Study Notes</h1>
    <a class="add-note-btn" href="/note/add-note">‚ûï Add New Note</a>

    <% if (notes && notes.length > 0) { %>
      <% notes.forEach(note => { %>
        <div class="note-card">
          <div class="note-title"><%= note.title %></div>
          <div class="note-subject">Subject: <%= note.subject || 'General' %></div>
          <div class="note-content"><%= note.content.substring(0, 100) %><% if (note.content.length > 100) { %>...<% } %></div>
          <div class="note-actions">
  <a href="/note/edit-note/<%= note._id %>">Edit</a>
  <form action="/note/delete-note/<%= note._id %>" method="POST" style="display: inline;">
    <button type="submit" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</button>
  </form>
</div>
        </div>
      <% }) %>
    <% } else { %>
      <p style="margin-top: 20px;">No notes found. Please add some.</p>
    <% } %>

    <a class="logout-btn" href="/dashboard">‚Üê Back to Dashboard</a>
  </div>
</body>
</html>